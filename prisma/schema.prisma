generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
// TODO: a√±adir hook para borrar archivo anterior cuando es actualizado
model FileDb{
  id Int @id @default(autoincrement())
  path String
  name String 
  url String 
  news News?
  event Event?
}

model News{
  id Int @id @default(autoincrement())
  title String 
  content String
  img FileDb @relation(fields: [imgId], references: [id])
  imgId Int @unique
  date DateTime @default(now())
}

model Event {
  id Int @id @default(autoincrement())
  title String
  description String
  start DateTime
  end DateTime
  img FileDb @relation(fields: [imgId], references: [id])
  imgId Int @unique
}